{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./out-tsc/app",
        "types": [],
        "paths": {
            "@models/*": ["src/app/models/*"],
            "@constants/*": ["src/app/constants/*"],
            "@services/*": ["src/app/services/*"]
        }
    },
    "files": ["src/main.ts", "src/polyfills.ts"],
    "include": ["src/**/*.d.ts"],
    "exclude": ["src/test.ts", "src/**/*.spec.ts"]
}
